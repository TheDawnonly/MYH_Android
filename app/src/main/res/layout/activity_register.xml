<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <houseproperty.manyihe.com.myh_android.utils.CompatToolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></houseproperty.manyihe.com.myh_android.utils.CompatToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="25px">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="100px"
            android:layout_height="60px"
            android:layout_marginLeft="50px"
            android:src="@mipmap/back" />

        <Button
            android:id="@+id/register_loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30px"
            android:background="@null"
            android:text="登录"
            android:textSize="50px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mob"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:text="手机号"
                android:textColor="#000" />

            <EditText
                android:id="@+id/register_mobile"
                android:layout_width="500px"
                android:layout_height="80px"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@id/mob"
                android:background="@null"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:paddingLeft="50px"
                android:singleLine="true"
                android:textSize="45px" />

            <TextView
                android:id="@+id/register_valiCode_tv"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_marginLeft="100px"
                android:background="@drawable/bg_edittext"
                android:text="获取验证码" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="20px"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:text="验证码"
                android:textColor="#000" />

            <EditText
                android:id="@+id/register_valiCode"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="20px"
                android:background="@null"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:paddingLeft="50px"
                android:singleLine="true"
                android:textSize="45px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="20px"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:text="密码"
                android:textColor="#000" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="20px"
                android:background="@null"
                android:password="true"
                android:singleLine="true"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:hint="请输入6-12位字母、数字"
                android:maxLength="16"
                android:paddingLeft="50px"
                android:textSize="45px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="20px"
            android:background="#eee" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已同意阅读并接受用户服务协议"
            android:textSize="30px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px">

        <Button
            android:id="@+id/register_btnNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:text="注册"
            android:textColor="#fff" />

        <Button
            android:id="@+id/register_btnYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:text="注册"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>