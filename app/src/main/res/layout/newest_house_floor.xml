<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="5px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="均价"
                    android:textColor="#000"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/newest_tv_average_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2132123"
                    android:textColor="#ff5c25"
                    android:textSize="@dimen/title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/m²"
                    android:textColor="#000"
                    android:textSize="@dimen/content" />
            </LinearLayout>

            <TextView
                android:id="@+id/newest_house_TvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top"
                android:text="400-068-1359"
                android:textSize="@dimen/title" />
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/newest_house_sdv"
            android:layout_width="320px"
            android:layout_height="240px"
            android:layout_centerVertical="true"
            android:layout_marginTop="15px"
            android:duplicateParentState="true"
            fresco:failureImage="@mipmap/ic_launcher_round"
            fresco:retryImage="@mipmap/ic_launcher"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="10px"
            fresco:roundingBorderColor="#eee"
            fresco:roundingBorderWidth="2px" />

        <LinearLayout
            android:id="@+id/newest_house_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:layout_toRightOf="@id/newest_house_sdv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newest_house_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="御道庄园"
                android:textColor="#000"
                android:textSize="45px"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newest_house_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newest_house_ll"
            android:layout_marginLeft="35px"
            android:layout_marginTop="@dimen/top"
            android:layout_toRightOf="@id/newest_house_sdv"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/newest_house_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="6"
                android:text="dizhi"
                android:textSize="@dimen/content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newest_house_ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newest_house_ll2"
            android:layout_marginLeft="35px"
            android:layout_marginTop="@dimen/top"
            android:layout_toRightOf="@id/newest_house_sdv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户型"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/newest_house_tv_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="2shinei"
                android:textSize="@dimen/content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newest_house_ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newest_house_ll3"
            android:layout_marginLeft="35px"
            android:layout_marginTop="@dimen/top"
            android:layout_toRightOf="@id/newest_house_sdv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建筑面积"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/newest_house_tv_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="mianji"
                android:textSize="@dimen/content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newest_house_ll4"
            android:layout_marginLeft="35px"
            android:layout_marginTop="@dimen/top"
            android:layout_toRightOf="@id/newest_house_sdv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newest_house_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#b2ddff"
                android:text="zaihsou"
                android:textColor="#249fff"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/newest_house_tv_houseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="#d8fdde"
                android:text="大产权"
                android:textColor="#5ccc2c"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/newest_house_tv_feature1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@drawable/bg_hot_floor_details0"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:text="大产权"
                android:textColor="#bcbaba"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/newest_house_tv_feature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@drawable/bg_hot_floor_details0"
                android:lines="1"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:text="大产权"
                android:textColor="#bcbaba"
                android:textSize="@dimen/content" />


        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="35px"
        android:background="#eee" />


</LinearLayout>