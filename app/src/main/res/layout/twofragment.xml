<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <houseproperty.manyihe.com.myh_android.utils.CompatToolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></houseproperty.manyihe.com.myh_android.utils.CompatToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/find_view_tabs"
            android:layout_width="wrap_content"
            app:pstsTabTextStyle="bold"
            app:pstsTabTextSize="50px"
            android:layout_centerHorizontal="true"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:pstsIndicatorColor="#5ac800"
            app:pstsShouldExpand="true"
            app:pstsTabTextColor="@color/txt_selector" />
        <ImageView
            android:layout_marginRight="25px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#cccbcb" />

    <android.support.v4.view.ViewPager
        android:id="@+id/find_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />
</LinearLayout>