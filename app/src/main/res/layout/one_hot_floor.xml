<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginTop="15px"
            android:id="@+id/hot_sdv"
            android:layout_width="320px"
            android:layout_height="240px"
            android:duplicateParentState="true"
            fresco:failureImage="@mipmap/ic_launcher_round"
            fresco:retryImage="@mipmap/ic_launcher"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="10px"
            fresco:roundingBorderColor="#eee"
            fresco:roundingBorderWidth="2px" />

        <LinearLayout
            android:id="@+id/hot_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:layout_toRightOf="@id/hot_sdv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hot_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="御道庄园"
                android:textColor="#000"
                android:textSize="50px" />

            <TextView
                android:id="@+id/hot_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="朝阳区"
                android:textSize="40px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hot_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_ll"
            android:layout_marginLeft="35px"
            android:layout_toRightOf="@id/hot_sdv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="均价" />

            <TextView
                android:id="@+id/hot_tv_average_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:text="均价"
                android:textColor="#ff9900"
                android:textSize="50px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hot_ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_ll2"
            android:layout_marginLeft="35px"
            android:layout_toRightOf="@id/hot_sdv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户型面积" />

            <TextView
                android:id="@+id/hot_tv_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="户型面积" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_ll3"
            android:layout_marginLeft="35px"
            android:layout_toRightOf="@id/hot_sdv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hot_tv_equity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d8fdde"
                android:text="大产权"
                android:textColor="#5ccc2c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d8fdde"
                android:text="大产权"
                android:textColor="#5ccc2c" />

            <TextView
                android:id="@+id/any_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:background="#b2ddff"
                android:text="随时看房"
                android:textColor="#249fff" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="35px"
        android:background="#eee" />


</LinearLayout>