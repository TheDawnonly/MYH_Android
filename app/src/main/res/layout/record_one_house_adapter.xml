<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/record_one_house_sdv"
            android:layout_width="320px"
            android:layout_height="240px"
            android:layout_centerVertical="true"
            android:layout_marginTop="15px"
            android:duplicateParentState="true"
            fresco:failureImage="@mipmap/ic_launcher_round"
            fresco:retryImage="@mipmap/ic_launcher"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="10px"
            fresco:roundingBorderColor="#eee"
            fresco:roundingBorderWidth="2px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35px"
            android:layout_toRightOf="@id/record_one_house_sdv"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_one_house_titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="御道庄园"
                    android:textColor="#000"
                    android:textSize="50px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:lines="1"
                    android:singleLine="true"
                    android:id="@+id/record_one_house_addressTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_one_house_layoutTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三室一厅" />

                <TextView
                    android:id="@+id/record_one_house_measureTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="户型面积"
                    android:textColor="#000" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/record_one_house_featureTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_hot_floor_details0"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:text="大产权"
                    android:textColor="#c9c8c8" />

                <TextView
                    android:id="@+id/record_one_house_featureTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@id/record_one_house_featureTv1"
                    android:background="@drawable/bg_hot_floor_details0"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:text="万科认证"
                    android:textColor="#c9c8c8" />

                <TextView
                    android:id="@+id/record_one_house_priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:text="200万"
                    android:textColor="#ff7143" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="35px"
        android:background="#eee" />
</LinearLayout>