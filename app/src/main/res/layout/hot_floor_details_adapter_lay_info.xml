<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hot_floor_details_adapter_sdv_lay_img"
            android:layout_width="200px"
            android:layout_height="300px"
            android:layout_marginLeft="65px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hot_floor_details_adapter_sdv_lay_img"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hot_floor_details_adapter_explains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3室2厅1卫  建筑面积  95m²" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="15px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hot_floor_details_adapter_explains"
                    android:text="均价" />

                <TextView
                    android:id="@+id/hot_floor_details_adapter_avg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="均价 500万/套"
                    android:textColor="#ff0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="15px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hot_floor_details_adapter_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全局格局" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="35px"
        android:background="#eee" />
</LinearLayout>